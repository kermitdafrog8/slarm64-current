 else
   SLKCFLAGS=""
   LIBDIRSUFFIX=""
@@ -111,6 +115,10 @@
   SLKLDFLAGS=" -Wl,--as-needed -Wl,--reduce-memory-overheads -Wl,--no-keep-memory -Wl,--stats"
