# OpenTegra
# https://cgit.freedesktop.org/xorg/driver/xf86-video-opentegra/
cd /tmp
rm -rf ot ; mkdir ot ; cd ot

wget http://xorg.freedesktop.org/releases/individual/driver/xf86-video-opentegra-0.7.0.tar.xz
exit

git clone --depth 1 https://github.com/grate-driver/xf86-video-opentegra
cd xf86-video-opentegra
OTEGVER=$( echo $(git rev-list --count master).$(git rev-parse --short master) )
cd ..
find xf86-video-opentegra/ -name '.git' -print0 | xargs -0 rm -rf
mv -fv xf86-video-opentegra xf86-video-opentegra-$OTEGVER
tar -Ixz -cf xf86-video-opentegra-$OTEGVER.tar.xz xf86-video-opentegra*
ls -1 $PWD/*.xz
