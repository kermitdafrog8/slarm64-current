autoreconf -vi

CFLAGS=$SLKCFLAGS \
CXXFLAGS=$SLKCFLAGS \
./configure \
  --prefix=/usr \
  --libdir=/usr/lib${LIBDIRSUFFIX} \
  --sysconfdir=/etc \
  --localstatedir=/var \
  --infodir=/usr/info \
  --mandir=/usr/man \
  --docdir=/usr/doc/${PKGNAME}-${MODULAR_PACKAGE_VERSION} \
  --disable-static \
  --build=arm-slackware-linux-gnueabi || exit 1

mkdir -vpm755 $PKG/usr/doc/${PKGNAME}-${MODULAR_PACKAGE_VERSION}/
cp -fav xorg.conf $PKG/usr/doc/${PKGNAME}-${MODULAR_PACKAGE_VERSION}/xorg.conf-sample
