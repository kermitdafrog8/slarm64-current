sh autogen.sh

CFLAGS=$SLKCFLAGS \
CXXFLAGS=$SLKCFLAGS \
./configure \
  --prefix=/usr \
  --libdir=/usr/lib${LIBDIRSUFFIX} \
  --sysconfdir=/etc \
  --localstatedir=/var \
  --infodir=/usr/info \
  --mandir=/usr/man \
  --docdir=/usr/doc/${PKGNAME}-${MODULAR_PACKAGE_VERSION} \
  --disable-static \
  --with-drmmode=exynos \
  --build=arm-slackware-linux-gnueabi || exit 1

sed -i 's/-Werror[^ ]*//g' src/Makefile Makefile
